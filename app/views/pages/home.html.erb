<% if user_signed_in? %>
  <h1><%= t '.welcome', name: current_user.given_name %></h1>
  <%= pie_chart @presenter.chart_data, colors: @presenter.chart_colors %>

  <section class='mt-3 pb-6'>
    <% @presenter.categories.each do |category| %>
      <%= link_to category, class: 'text-decoration-none text-black' do %>
        <div class='d-flex justify-content-between p-2 bg-light mb-2 rounded-3'>
          <%= category.title %>
          <span>
            <%= number_to_currency category.sum %>
          </span>
        </div>
      <% end %>
    <% end %>
  </section>

  <div class='d-grid fixed-bottom p-4'>
    <%= link_to t('.log'), new_transaction_path, class: 'btn btn-primary py-3 rounded-pill shadow fs-6 fw-bold' %>
  </div>
<% else %>
  <p><%= t '.description' %></p>
<% end %>